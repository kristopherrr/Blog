<h1>Nuevo Artículo</h1>

<!-- Mensaje de errores de validación -->
<% if @article.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h4><%= pluralize(@article.errors.count, "error") %> impide que se guarde el artículo:</h4>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<!-- Formulario para crear el artículo -->
<%= form_for @article do |f| %>
  <div class="form-group">
    <%= f.label :title, "Título" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :text, "Contenido" %>
    <%= f.text_area :text, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit "Guardar", class: 'btn btn-primary' %>
    <%= link_to 'Regresar', articles_path, class: 'btn btn-secondary' %>
  </div>
<% end %>

